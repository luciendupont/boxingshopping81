                              <br>
                              <p><b></b> {{ short.descriptionArticle }}</p>
                              <br class="nbr">
                              <p><b> marque:</b> {{ short.marqueArticle }}</p>
                             
                          </div>
                          <div class="col-lg-5 align-self-center">
                              <p class="fs-lg-1 fs-3"> <b>Prix :</b> {{ short.prixArticle }}â‚¬</p>
                              <button type="button" class="btn btn-light" li class="nav-item">
                                <a class="nav-link" href="{{path('app_carte_add',{'id':short.id})}}">commandez </a></button>
                          </div>
                      </div>
                  </div>
              </div>
              {% endfor %}
          </div>
      </div>
  </div>

{% endblock %}
