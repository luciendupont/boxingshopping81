{% extends 'base.html.twig' %}

{% block title %}Hello CasqueController!{% endblock %}

{% block body %}
  {% for casque in casques %}
   <div class="container text-center">
  <div class="row">
   
     <div class="col">

        <div class="col-lg-4 my-2 d-flex justify-content-center">
            <div class="card border-dark mb-3" style="auto: 20rem;">
                <div class="card-header">{{casque.nomArticle}}</div>
                <img src="boxe/article/{{casque.imageArticle}}" alt="" width="100">
                <div class="card-body">
                  <h4 class="card-title"></h4>
                  <p class="card-text">{{casque.descriptionArticle}}</p>
                  <button type="button" class="btn btn-light" li class="nav-item">
                    <a class="nav-link" href="{{path('app_carte_add',{'id':casque.id})}}">commandez </a></button>
      
                </div>
        </div>
        </div>

      </div>
  </div>
</div>
        {% endfor %}
{% endblock %}
