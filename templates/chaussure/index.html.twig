{% extends 'base.html.twig' %}

{% block title %}Hello ChaussureController!{% endblock %}

{% block body %}
{% for chaussure in chaussures %}

<div class="container text-center">
  <div class="row">
      <div class="col">

        <div class="col-lg-4 my-2 d-flex justify-content-center">
            <div class="card border-dark mb-3" style="auto: 20rem;">
                <div class="card-header">{{chaussure.nomArticle}}</div>
                <img src="boxe/article/{{chaussure.imageArticle}}" alt="" width="100">
                <div class="card-body">
                  <h4 class="card-title">{{chaussure.descriptionArticle}}</h4>
                  <p class="card-text"></p>
                  <button type="button" class="btn btn-light" li class="nav-item">
                    <a class="nav-link" href="{{path('app_carte_add',{'id':chaussure.id})}}">commandez </a></button>
      
                </div>
        </div>
        </div>


        {% endfor %}
{% endblock %}
