{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-6 bg-light-subtle">
        <div class="d-flex justify-content-center w-100">
            <div>
                <h1 class="mt-4">Informations de l'utilisateur</h1>
                {{ form_start(form) }}
                <div class="w-100 mt-3">
                <div class="w-100 mt-3">
                    {{ form_row(form.nom, {
                        label: 'Nom'
                    }) }}
                </div>
                <div class="w-100 mt-3">
                    {{ form_row(form.prenom, {
                        label: 'Prenom'
                    }) }}
                </div>
                <div class="w-100 mt-3">
                    {{ form_row(form.email, {
                        label: 'Email'
                    }) }}
                </div>
                <div class="w-100 mt-3">
                    {{ form_row(form.adresse, {
                        label: 'Adresse facturation'
                    }) }}
                </div>
                <div class="w-100 mt-3">
                    {{ form_row(form.ville, {
                        label: 'Ville facturation'
                    }) }}
                </div>
                <div class="w-100 mt-3">
                    {{ form_row(form.cp, {
                        label: 'Code postal facturation'
                    }) }}
                </div>
                <div class="d-flex mt-5 mb-3">
 <button type="submit">modifier</button>
                    <a href="{{ path('app_profil',{'id': user.id}) }}" class="btn btn-light ms-4 mb-3">retour</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}